<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context="com.marketapp.profileM">

    <LinearLayout
        android:id="@+id/profileTopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/gray">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="110dp"
            android:layout_height="104dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/account_avatar_profile_user_6_svgrepo_com"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/textView5"
                android:layout_width="106dp"
                android:layout_height="68dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="80dp"
                android:text="บัญชี"
                android:textColor="#ffffff"
                android:textSize="45sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:text="จัดการบัญชี"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_marginStart="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

        </LinearLayout>




    </LinearLayout>



<LinearLayout
    android:layout_below="@+id/profileTopic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="50dp"
    android:background="@drawable/background_content_bottom"
    android:gravity="center">

    <Button
        android:id="@+id/profile"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_row="0"
        android:layout_column="0"
        android:background="@drawable/usernamewriteround"
        android:onClick="Bprofile"
        android:text="แก้ไขโปรไฟล์                                        "
        android:textSize="18sp" />

    <Button
        android:id="@+id/safty"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginTop="20dp"
        android:background="@drawable/usernamewriteround"
        android:onClick="Bsafty"
        android:text="ตั้งค่าความปลอดภัย                               "
        android:textSize="18sp" />

    <Button
        android:id="@+id/delete"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginTop="20dp"
        android:background="@drawable/usernamewriteround"
        android:onClick="Bdelete"
        android:text="ลบบัญชี                                                  "
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/safty" />

    <Button
        android:id="@+id/probpo"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginTop="20dp"
        android:background="@drawable/usernamewriteround"
        android:onClick="Bprobpo"
        android:text="เกี่ยวกับแอปพลิเคชัน                              "
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete" />


</LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationViewM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:menu="@menu/bottom_bar"
        android:layout_alignParentBottom="true"
        >

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>