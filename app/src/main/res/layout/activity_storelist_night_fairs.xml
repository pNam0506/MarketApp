<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#E3D980"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.marketapp.StorelistNightFairs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="@drawable/background_content_bottom3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ร้านค้า"
            android:textSize="20dp"
            android:id="@+id/detailNameMk"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/food_stall_stall_svgrepo_com"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="คุณสามารถดูร้านค้าต่างๆ เพื่อช่วยให้คุณไม่เจอร้านค้าที่ขายสินค้าเดียวกันได้"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            android:id="@+id/order"
            android:layout_marginEnd="@dimen/_20sdp"
            android:textColor="@color/gray" />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/StorelistNightFairs"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>