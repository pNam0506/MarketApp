<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".detailOfMarket">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >

            <ImageView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:id="@+id/detailImage"
                android:padding="8dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/shop_groceries_svgrepo_com"
                android:scaleType="fitCenter"
                android:background="@drawable/white_corner"
                android:layout_marginTop="50dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NameOfMarket"
                    android:textSize="20dp"
                    android:id="@+id/detailNameMk"
                    android:textColor="@color/gray_softy"
                    android:layout_gravity="center"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rules"
                    android:textSize="15dp"
                    android:id="@+id/detailInform"
                    android:textColor="@color/gray_softy"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"


                    />

            </LinearLayout>










        </LinearLayout>

        <Button
            android:id="@+id/map"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:layout_margin="20dp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Map"

            />



    </LinearLayout>




</LinearLayout>