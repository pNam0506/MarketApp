<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.marketapp.tuomom">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/background_content_bottom3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ทำการเลือกล็อก"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_20ssp"
                    android:gravity="center"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/tuomom_Layout"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="36dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/road"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="ถนนนาราธิวาส"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp">

                        <GridLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:columnCount="3"
                            android:rowCount="3">

                            <LinearLayout
                                android:layout_width="75dp"
                                android:layout_height="100dp"
                                android:background="@drawable/background_text">

                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="450บ. (1)">
                                </TextView>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="70dp"
                                android:layout_height="100dp"
                                android:layout_marginLeft="10dp">

                                <GridLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:columnCount="2"
                                    android:rowCount="4">

                                    <LinearLayout
                                        android:layout_width="30dp"
                                        android:layout_height="20dp"
                                        android:layout_marginRight="5dp"
                                        android:background="@drawable/background_text" />

                                    <TextView
                                        android:layout_width="30dp"
                                        android:layout_height="wrap_content"
                                        android:layout_row="0"
                                        android:layout_column="0"
                                        android:gravity="center"
                                        android:text="3"/>

                                    <LinearLayout
                                        android:layout_width="30dp"
                                        android:layout_height="20dp"
                                        android:background="@drawable/background_text" >

                                        <TextView
                                            android:layout_width="30dp"
                                            android:layout_height="wrap_content"
                                            android:layout_row="0"
                                            android:layout_column="0"
                                            android:gravity="center"
                                            android:text="7"/>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="30dp"
                                        android:layout_height="20dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@drawable/background_text" >

                                        <TextView
                                            android:id="@+id/textView"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="4"
                                            android:gravity="center"
                                            />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="30dp"
                                        android:layout_height="20dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@drawable/background_text">

                                        <TextView
                                            android:layout_width="35dp"
                                            android:layout_height="wrap_content"
                                            android:layout_row="0"
                                            android:layout_column="0"
                                            android:gravity="center"
                                            android:text="8"/>
                                    </LinearLayout>



                                    <LinearLayout
                                        android:layout_width="30dp"
                                        android:layout_height="20dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@drawable/background_text">

                                        <TextView
                                            android:id="@+id/textView2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="5"
                                            android:gravity="center"
                                            />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="30dp"
                                        android:layout_height="20dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@drawable/background_text"
                                        >
                                        <TextView
                                            android:layout_width="35dp"
                                            android:layout_height="wrap_content"
                                            android:layout_row="0"
                                            android:layout_column="0"
                                            android:gravity="center"
                                            android:text="9"/>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="30dp"
                                        android:layout_height="20dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@drawable/background_text">

                                        <TextView
                                            android:id="@+id/textView3"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:text="6"    />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="30dp"
                                        android:layout_height="20dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@drawable/background_text"
                                        >
                                        <TextView
                                            android:layout_width="35dp"
                                            android:layout_height="wrap_content"
                                            android:layout_row="0"
                                            android:layout_column="0"
                                            android:gravity="center"
                                            android:text="10"/>
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="26dp"
                                        android:layout_height="4dp"
                                        android:layout_row="0"
                                        android:layout_column="0"
                                        android:gravity="center"
                                        android:text=""/>


                                </GridLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="75dp"
                                android:layout_height="100dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/background_text">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="400บ. (12)"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="75dp"
                                android:layout_height="100dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/background_text">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="450บ. (2)"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="75dp"
                                android:layout_height="100dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/background_text">
                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="400บ. (11)"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="75dp"
                                android:layout_height="100dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/background_text">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="400บ. (13)"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="75dp"
                                android:layout_height="100dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/background_text2">

                                <TextView
                                    android:layout_width="75dp"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="450บ. (14)"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="75dp"
                                android:layout_height="100dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/background_text1">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="400บ. (15)"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="70dp"
                                android:layout_height="100dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/background_text1">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="400บ. (16)"/>

                            </LinearLayout>


                        </GridLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp">

                            <LinearLayout
                                android:layout_width="50dp"
                                android:layout_height="320dp"
                                android:background="@drawable/background_text3">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="ที่นั่ง" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/background_text3"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="ที่จอดรถ"/>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:background="@drawable/background_content_bottom2">

                <LinearLayout
                    android:id="@+id/Order_det"
                    android:layout_below="@+id/tuomom_Layout"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:background="@drawable/background_text"
                        android:text="อาหาร"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/background_text1"
                        android:text="ของใช้"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/background_text2"
                        android:text="ต้นไม้"
                        android:textColor="@color/white" />

                </LinearLayout>


                <LinearLayout
                    android:layout_below="@+id/tuomom_Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="20dp">

                    <EditText
                        android:id="@+id/log_tuomom"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:background="@drawable/background_input"
                        android:hint="จองพื้นที่หมายเลข"
                        android:padding="5dp" />


                </LinearLayout>
                <LinearLayout
                    android:layout_below="@+id/tuomom_Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="20dp">

                    <EditText
                        android:id="@+id/item_tuomom"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:background="@drawable/background_input"
                        android:hint="สินค้าที่ขาย"
                        android:padding="5dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_below="@+id/tuomom_Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="20dp">

                    <EditText
                        android:id="@+id/name_boot_tuomom"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:background="@drawable/background_input"
                        android:hint="ชื่อร้านค้า"
                        android:padding="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_below="@+id/tuomom_Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="20dp">


                    <Button
                        android:id="@+id/Success5"
                        android:layout_width="110dp"
                        android:layout_height="60dp"
                        android:text="จอง"
                        android:backgroundTint="@color/pay"
                        android:layout_marginStart="10dp"/>

                </LinearLayout>



            </LinearLayout>


        </LinearLayout>


</ScrollView>

</RelativeLayout>