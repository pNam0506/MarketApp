<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderSeller">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/background_market_Layout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/gray"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/market_background"
            android:background="@color/gray"
            />

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_below="@+id/background_market_Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/white_corner"
            android:layout_margin="10dp"
            android:padding="16dp"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="จองพื้นที่ของตลาด Night Fair สำเร็จ"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="จองพื้นที่หมายเลขที่ 1 ราคา 600 บาท"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ในวันที่ 31/5/2566"
                android:textSize="20dp"
                />



        </LinearLayout>






    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:menu="@menu/bottom_bar"
        android:layout_alignParentBottom="true"
        >

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>