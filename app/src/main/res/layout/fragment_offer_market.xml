<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".offerMarketFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/background_market_Layout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/gray"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/market_background"
            />



    </LinearLayout>

    <androidx.appcompat.widget.SearchView
        android:layout_below="@+id/background_market_Layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="-25dp"
        android:background="@drawable/white_corner"
        app:searchHintIcon="@null"
        app:iconifiedByDefault="false"
        app:searchIcon="@drawable/search_circle_svgrepo_com"
        android:focusable="false"


        >


    </androidx.appcompat.widget.SearchView>


</RelativeLayout>