<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF5E0"
    android:id="@+id/free_feel"
    tools:context="com.marketapp.freeFeel" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/background_content_bottom3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="ทำการเลือกล็อก"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_20ssp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="-45dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_550sdp"
                android:src="@drawable/map1"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-70dp"
                android:background="@drawable/background_content_bottom2"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/Order_det"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:background="@drawable/background_text"
                        android:gravity="center"
                        android:text="อาหาร"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/background_text1"
                        android:gravity="center"
                        android:text="ของใช้"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/background_text2"
                        android:gravity="center"
                        android:text="ต้นไม้"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/background_text4"
                        android:gravity="center"
                        android:text="ล็อกใหญ่"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Order_det"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/log_free_feel"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:background="@drawable/background_input"
                        android:hint="จองพื้นที่หมายเลข"
                        android:padding="5dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/item_free_feel"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:background="@drawable/background_input"
                        android:hint="สินค้าที่ขาย"
                        android:padding="5dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/name_boot_free_feel"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:background="@drawable/background_input"
                        android:hint="ชื่อร้านค้า"
                        android:padding="5dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center">


                    <Button
                        android:id="@+id/Success"
                        android:layout_width="110dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="10dp"
                        android:backgroundTint="@color/pay"
                        android:text="จอง" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</RelativeLayout>