<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/recImage"
            android:layout_marginStart="20dp"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/shop_groceries_svgrepo_com"
            app:shapeAppearanceOverlay="@style/roundedImageViewRound"
            >


        </com.google.android.material.imageview.ShapeableImageView>



        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/recNameMk"
            android:text="ชื่อตลาด"
            android:textColor="@color/gray_softy"
            android:textSize="20sp"
            android:layout_toEndOf="@+id/recImage"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"

            />
        <TextView
            android:layout_width="140dp"
            android:layout_height="12dp"
            android:id="@+id/recLocationMk"
            android:text="ราคาพื้นที่จอง"
            android:textColor="@color/gray_softy"
            android:textSize="8sp"
            android:layout_toEndOf="@+id/recImage"
            android:layout_below="@id/recNameMk"
            android:maxLines="0"
            android:layout_marginStart="20dp"


            />






    </RelativeLayout>

</androidx.cardview.widget.CardView>