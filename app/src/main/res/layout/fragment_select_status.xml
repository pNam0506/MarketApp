<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray"
    tools:context="com.marketapp.selectStatusFragment">

    <LinearLayout
        android:id="@+id/linearstatushead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/statushead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_65sdp"
            android:text="สถานะของคุณ"
            android:textSize="@dimen/_30sdp"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/viewBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_40sdp"
        android:background="@drawable/background_content_bottom"
        app:layout_constraintTop_toBottomOf="@id/linearstatushead"
        app:layout_constraintBottom_toBottomOf="parent">

    <LinearLayout
        android:id="@+id/selected"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_400sdp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/sellerLayout"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_135sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_gravity="center"
            android:background="@drawable/border_corner"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sellerImage"
                android:layout_width="match_parent"
                android:layout_height="114dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_gravity="center"
                android:src="@drawable/account_avatar_profile_user_10_svgrepo_com" />
            <TextView
                android:id="@+id/sellerText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="ผู้ขาย"
                android:textColor="@color/black"
                android:textSize="@dimen/_20ssp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/managerLayout"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_135sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_gravity="center"
            android:background="@drawable/border_corner2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/managerImage"
                android:layout_width="match_parent"
                android:layout_height="114dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_gravity="center"
                android:src="@drawable/shop_online_shop_svgrepo_com" />

            <TextView
                android:id="@+id/managerText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="ตลาด"
                android:textColor="@color/black"
                android:textSize="@dimen/_20ssp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nextLayout"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border_corner"
                android:backgroundTint="#72B5EA"
                android:text="ถัดไป"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>