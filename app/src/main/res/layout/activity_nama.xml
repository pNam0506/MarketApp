<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF5E0"
    tools:context="com.marketapp.nama"
    android:id="@+id/nama">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/background_content_bottom3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ทำการเลือกล็อก"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_20ssp"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginTop="-55dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_550sdp"
                    android:src="@drawable/map2"/>

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-60dp"
                android:orientation="vertical"
                android:background="@drawable/background_content_bottom2">
                <LinearLayout
                    android:id="@+id/Order_det"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:background="@drawable/background_text"
                        android:text="อาหาร"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/background_text2"
                        android:text="ต้นไม้"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/background_text1"
                        android:text="ของใช้"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:gravity="center"
                        android:background="@drawable/background_text4"
                        android:text="ล็อกใหญ่"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="20dp">

                    <EditText
                        android:id="@+id/log_nama"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:background="@drawable/background_input"
                        android:hint="จองพื้นที่หมายเลข"
                        android:padding="5dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="20dp">

                    <EditText
                        android:id="@+id/log_nama_item"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:background="@drawable/background_input"
                        android:hint="สินค้าที่ขาย"
                        android:padding="5dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/name_boot_nama"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:background="@drawable/background_input"
                        android:hint="ชื่อร้านค้า"
                        android:padding="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="20dp">


                    <Button
                        android:id="@+id/Success3"
                        android:layout_width="110dp"
                        android:layout_height="60dp"
                        android:text="จอง"
                        android:backgroundTint="@color/pay"
                        android:layout_marginStart="10dp"/>

                </LinearLayout>


            </LinearLayout>



        </LinearLayout>




    </ScrollView>




</RelativeLayout>